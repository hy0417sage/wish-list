<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Toolbar-->
    <style name="Widget.Wishlist.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/Surface</item>
        <item name="android:title">@null</item>
    </style>

    <!--    Toolbar Arrow-->
    <style name="Widget.Wishlist.Toolbar.WithArrow" parent="Widget.Wishlist.Toolbar">
        <item name="android:navigationIcon">@drawable/ic_baseline_arrow_back_24</item>
        <item name="android:title">@null</item>
    </style>

    <!--    Toolbar Close-->
    <style name="Widget.Wishlist.Toolbar.WithClose" parent="Widget.Wishlist.Toolbar">
        <item name="android:navigationIcon">@drawable/ic_baseline_close_24</item>
        <item name="android:title">@null</item>
    </style>

    <!--    Chip-->
    <style name="Widget.Wishlist.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/ChipStrokeColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/bg_filter_chip_state_list</item>
        <item name="android:textColor">@color/text_filter_chip_state_list</item>
        <item name="textStartPadding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipStartPadding">6dp</item>
        <item name="chipEndPadding">6dp</item>
    </style>
</resources>